<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Vocabulary Trainer</title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
      max-width: 600px;
      margin: auto;
    }
    .card {
      border: 1px solid #ddd;
      border-radius: 12px;
      padding: 20px;
      margin-top: 20px;
    }
    button {
      padding: 8px 16px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
    }
    button:hover {
      opacity: 0.8;
    }
  </style>
</head>
<body>
  <h1>Vocabulary Trainer</h1>
  <p>英語サークル向けの単語学習ツールです。</p>

  <div class="card">
    <label>新しい単語を追加:</label><br>
    <input id="word" placeholder="word" />
    <input id="meaning" placeholder="meaning" />
    <button onclick="addWord()">Add</button>
  </div>

  <div class="card">
    <h2>Quiz</h2>
    <button onclick="startQuiz()">Start Quiz</button>
    <p id="quiz-word"></p>
    <input id="quiz-answer" placeholder="your answer" />
    <button onclick="checkAnswer()">Check</button>
    <p id="quiz-result"></p>
  </div>

  <script>
    const words = [];
    let current = null;

    function addWord() {
      const w = document.getElementById("word").value;
      const m = document.getElementById("meaning").value;
      if (w && m) {
        words.push({ w, m });
        alert("Added!");
      }
    }

    function startQuiz() {
      if (words.length === 0) {
        alert("No words yet.");
        return;
      }
      current = words[Math.floor(Math.random() * words.length)];
      document.getElementById("quiz-word").innerText = current.w;
      document.getElementById("quiz-result").innerText = "";
      document.getElementById("quiz-answer").value = "";
    }

    function checkAnswer() {
      const ans = document.getElementById("quiz-answer").value;
      if (!current) return;

      if (ans.trim().toLowerCase() === current.m.toLowerCase()) {
        document.getElementById("quiz-result").innerText = "Correct!";
      } else {
        document.getElementById("quiz-result").innerText = `Wrong: ${current.m}`;
      }
    }
  </script>
</body>
</html>
